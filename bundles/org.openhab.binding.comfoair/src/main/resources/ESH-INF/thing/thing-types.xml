						<channel id="fanIn0" typeId="fan_in_0" />
						<channel id="fanIn1" typeId="fan_in_1" />
						<channel id="fanIn2" typeId="fan_in_2" />
						<channel id="fanIn3" typeId="fan_in_3" />
						<channel id="fanInPercent" typeId="fan_in_percent" />
