		<channel-type id="activate">
				<item-type>Switch</item-type>
				<label>Activate binding control</label>
				<description>Activate (control through openHAB) or deactivate (return control to CCEase) binding control</description>
				<category>Switch</category>
				<state readOnly="false"/>
		</channel-type>

		<channel-type id="fan_evel">
				<item-type>Number</item-type>
				<label>Fan level</label>
				<description>Fan level</description>
				<category>Number</category>
				<state readOnly="false">
						<options>
								<option value="1">Away</option>
								<option value="2">Level 1</option>
								<option value="3">Level 2</option>
								<option value="4">Level 3</option>
						</options>
				</state>
		</channel-type>

		<channel-type id="target_temperature">
				<item-type>Number:Temperature</item-type>
				<label>Target temperature</label>
				<description>Target (comfort) temperature</description>
				<category>Temperature</category>
				<state min="12" max="28" step="0.5" pattern="%.1f %unit%" readOnly="false"/>
		</channel-type>

		<channel-type id="filter_error">
				<item-type>Switch</item-type>
				<label>Filter error</label>
				<description>Filter full</description>
				<category>Switch</category>
				<state readOnly="true" />
		</channel-type>

		<channel-type id="error_message">
				<item-type>String</item-type>
				<label>Error message</label>
				<description>Current errors</description>
				<category>Text</category>
				<state readOnly="true" />
		</channel-type>

		<channel-type id="filter_reset">
				<item-type>Switch</item-type>
				<label>Filter reset</label>
				<description>Reset filter operating hours</description>
				<category>Switch</category>
				<state readOnly="false" />
		</channel-type>

		<channel-type id="error_reset">
				<item-type>Switch</item-type>
				<label>Error reset</label>
				<description>Reset errors</description>
				<category>Switch</category>
				<state readOnly="false" />
		</channel-type>

